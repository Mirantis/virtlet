#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail
set -o errtrace

cleanup() {
  if [[ ${HTTP_SERVER_PID:-} ]] ; then
    kill ${HTTP_SERVER_PID}
  fi
}

trap cleanup EXIT

mkdir -p /tmp/image_store
pushd /tmp/image_store
curl https://github.com/Mirantis/virtlet/releases/download/v0.8.2/cirros.img
rm -rf copy
ln -s . copy
python -m SimpleHTTPServer 80 >/tmp/http_server.log &
HTTP_SERVER_PID=$!
popd

if [ $# -ne 0 ] ; then
  go test -test.v -run $*
else
  go test -v .
fi
